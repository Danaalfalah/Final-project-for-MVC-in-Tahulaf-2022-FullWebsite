<h1 style="margin:40px"></h1>
<section class="section">
    <div class="container">

        <!--<div class="btn">-->



        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card  col-lg-4 col-md-6 col-sm-12" style="width: 18rem; margin-left: 20px; margin-top:30px; background-color: #DCDCDC;">
                    <img src=@Url.Content("~/Images/" + @item.Product1.Imagepath) class="card-img-top align-items-center" alt="..." width="100%" height="200px" style="margin-top:10px">
                    <div class="card-body target">
                        <h5 class="card-title">@item.Product1.Productname</h5>

                        <p class="card-text">@item.Categoryproduct1.Categoryproductname</p>
                        <p class="card-text">@item.Store1.Storename</p>
                        <p class="card-text">@item.Product1.Descriptions</p>
                        <p class="card-text">@item.Product1.Price</p>

                  
                            <form method="post" class="btn-group" style="bottom:0; left:0;">
                                <button class="btn btn-outline-primary" asp-controller="User" asp-action="ProductDetails" asp-route-id=@item.Product1.Productid>show product</button>
                                <button class="btn btn-outline-danger" asp-controller="User" asp-action="ProductDetails" asp-route-id=@item.Product1.Productid>add to cart</button>
                            </form>
                      
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<br>


<script>
    function myFunction() {
        var input = document.getElementById("myInput");
        var filter = input.value.toLowerCase();
        var nodes = document.getElementsByClassName('target');

        for (i = 0; i < nodes.length; i++) {
            if (nodes[i].innerText.toLowerCase().includes(filter)) {
                nodes[i].style.display = "block";
            } else {
                nodes[i].style.display = "none";
            }
        }
    }
</script>
