@model IEnumerable<FinalProject1ForMVC.Models.Contactusform>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>contact us form</h2>
<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
