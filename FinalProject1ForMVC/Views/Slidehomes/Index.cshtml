@model IEnumerable<FinalProject1ForMVC.Models.Slidehome>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <h3> slideshow home</h3>
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image 1
            </th>
            <th>
                Image 2
            </th>
            <th>
                Image 3
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=@Url.Content("~/Images/" + item.Img1)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                <img src=@Url.Content("~/Images/" + item.Img2)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                <img src=@Url.Content("~/Images/" + item.Img3)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
